<tal:manager replace="structure provider:collage.ContentManager" />

<div id="zopeorg_teaser">
  <tal:rep repeat="teaser view/teasers">
  <div class="teaser">
       <a href=""
          tal:omit-tag="not:teaser/url"
          tal:attributes="href teaser/url;
                          title teaser/title">
           <tal:img replace="structure teaser/image" /><br/>
           <p tal:condition="teaser/text" tal:content="teaser/text">TEXT</p>
       </a>
  </div>
  </tal:rep>
</div>
